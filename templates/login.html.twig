                                    <div class="alert alert-danger text-center ">
                                        {{ error | trans }} {# <?php echo trans($error) ?> #} 
                                    </div>
                                    
                                 {% endif %} 

                                <!-- If you want to add a checkbox to this form, uncomment this code

                                <div class="checkbox">
